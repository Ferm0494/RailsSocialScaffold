


<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%= render 'shared/friendships_links', user: @user %>
  <% if friends(@user) %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
<%else%>
<h5>Send an invitation to connect</h5>
<%end%>
