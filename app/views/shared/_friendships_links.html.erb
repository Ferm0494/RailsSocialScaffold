 <% request = friendship_invitation_exists(user)%>
 <%friends = friends(user)%>
 <% if request  %>
        <%if request.receiver.eql? current_user %>
        <%= link_to  "Cancel invitation", friendship_path(request), method: :delete,  class: "btn btn-danger" %>
        <%else%>
         <%= link_to  "Accept invitation", friendship_path(request), method: :put, class: "btn btn-success"  %>

        <%end%>
    <%elsif friends %>
            <%= link_to  "Delete friend", friendship_path(friends), method: :delete, class: "btn btn-danger" %>
    <%else%>
            <%= link_to "Add as friend", new_friendship_path(user), method: :post, class: "btn btn-info" %>
 <%end%>